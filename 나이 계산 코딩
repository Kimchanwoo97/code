using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using static System.Console;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int age;

            WriteLine("년도를 입력해 주세요.");
            int Year = int.Parse(ReadLine());

            WriteLine();

            WriteLine("태어난 년도를 입력 해주세요.");
            int birthYear = int.Parse(ReadLine());//태어난 년도

            age = Year - birthYear + 1;

            WriteLine();

            if (age > 0)
            {
                WriteLine($"현재 나이는 : {age}살 입니다.");
            }
            else
            {
                WriteLine("정확한 입력을 부탁드립니다.");
            }            

            WriteLine();
        }
    }
}
